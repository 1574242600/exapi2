{
    "compilerOptions": {
        "lib": ["es6"],
        "module": "commonjs",
        "baseUrl": "src",
        "outDir": "./build",
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "paths": {
            "@utils/*": ["utils/*"],
            "@types": ["types"],
            "@define": ["define"]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./src/**/*.test.ts"
    ]
}